<resources>
    <style name="Theme.PolyMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Add AppBarOverlay style for the toolbar -->
    <style name="Theme.PolyMobile.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!-- Add PopupOverlay style if needed by other layouts -->
    <style name="Theme.PolyMobile.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/white</item>
    </style>
</resources>